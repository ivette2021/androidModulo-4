<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView8"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/titulo"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="@string/subtitulo"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/botonPapa"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="540dp"
                android:backgroundTint="@color/azul"
                android:contentDescription="@string/IB"
                android:drawableLeft="@drawable/ic_fries"
                android:text="papas"
                tools:ignore="ButtonStyle,MissingConstraints,RtlHardcoded" />

            <Button
                android:id="@+id/botonPizza"
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="540dp"
                android:backgroundTint="@color/azul"
                android:contentDescription="@string/IB"
                android:drawableLeft="@drawable/ic_pizza"

                android:text="pizza"
                tools:ignore="MissingConstraints,RtlHardcoded" />

            <Button
                android:id="@+id/botonBebida"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="540dp"
                android:backgroundTint="@color/azul"
                android:contentDescription="@string/IB"
                android:drawableLeft="@drawable/ic_drink"
                android:text="bebidas"
                tools:ignore="ButtonStyle,MissingConstraints,RtlHardcoded" />

        </LinearLayout>
    </LinearLayout>


    <GridLayout
        android:layout_width="413dp"
        android:layout_height="450dp"
        android:layout_marginTop="280dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/subtitulo3"
            android:textSize="16sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagenPapaFrita"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageStyle"
            app:srcCompat="@drawable/imgfries" />

        <com.google.android.material.imageview.ShapeableImageView

            android:id="@+id/imagenPizza"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:contentDescription="@string/IB"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageStyle"
            app:srcCompat="@drawable/imgpizza" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="TextView" />

    </GridLayout>

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="69dp"
        android:layout_height="80dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:background="@color/cardview_shadow_end_color"
        android:contentDescription="@string/IB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="-40dp"
        android:text="@string/encort"
        android:textColor="@color/azul"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/menu"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>